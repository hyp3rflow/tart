{
  "name": "tart",
  "version": "0.1.0",
  "main": "public/electron.js",
  "description": "Show your current schedule on discord based on your calendar.",
  "author": "hyperflow <hyperflow@kakao.com>",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build && cross-env-shell rm -rf build/*.ts build/**/*.ts",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "start": "concurrently \"yarn etsc\" \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "etsc": "tsc --esModuleInterop true public/electron.ts public/modules/preload.ts",
    "build:win": "yarn tc && yarn react-build && electron-builder --win --x64",
    "build:mac": "yarn tc && yarn react-build && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps && patch-package"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "discord-rpc": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "jotai": "^0.15.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^13.0.10",
    "@types/discord-rpc": "^3.0.4",
    "@types/react-router-dom": "^5.1.7",
    "@types/fs-extra": "9.0.7",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.9",
    "concurrently": "^6.0.0",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "electron-builder-squirrel-windows": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "patch-package": "^6.4.7",
    "typescript": "^4.2.3",
    "wait-on": "^5.3.0",
    "cross-env": "^7.0.3"
  },
  "build": {
    "productName": "TART",
    "appId": "com.electron.TART",
    "asar": true,
    "directories": {
      "buildResources": "build_resource/",
      "output": "app_build/"
    },
    "artifactName": "${productName} ${version} setup.${ext}",
    "protocols": {
      "name": "TART",
      "schemes": [
        "tart"
      ]
    },
    "extraMetadata": {
      "homepage": "https://github.com/hyp3rflow/tart"
    },
    "win": {
      "target": [
        "squirrel"
      ],
      "files": [
        "build/**/*"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "TART"
    }
  }
}
